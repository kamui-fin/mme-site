{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "author": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "float",
      "required": true
    },
    "coverType": {
      "type": "enumeration",
      "enum": [
        "Paperback",
        "Hardcover"
      ],
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "genre": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::genre.genre",
      "inversedBy": "books"
    },
    "availability": {
      "type": "enumeration",
      "enum": [
        "pre-order",
        "in-stock"
      ]
    }
  }
}
