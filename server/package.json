        "celebrate": "^15.0.1",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "express": "^4.17.3",
        "helmet": "^5.0.2",
        "http-status": "^1.5.0",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "pg": "^8.7.3",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.3.7",
        "validator": "^13.7.0",
        "winston": "^3.7.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.12",
        "@types/morgan": "^1.9.3",
        "@types/node": "^15.12.2",
        "@types/validator": "^13.7.1",
        "@typescript-eslint/eslint-plugin": "^4.4.1",
        "eslint": "^7.28.0",
        "eslint-config-airbnb-typescript": "^12.3.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^26.1.1",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "nodemon": "^2.0.7",
        "ts-node": "^10.6.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.3.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint",
            "prettier --write",
            "git add"
        ]
    }
}
